<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- CSS only -->
    <link defer href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>My Applications</title>
</head>

<body>
    <nav class="background-color: #e3f2fd;">
        <% if (user) { %>
            <a href="/applications/new">Add an Application</a>
            <a href="/logout">LOG OUT</a>
            <% } else { %>
                <a href="/auth/google" class="login">LOG IN&nbsp;<img src=""></a>
                <% } %>
    </nav>


    <table class="table table-hover caption-top" id="list">
        <caption>My Applications</caption>
        <thead class="table-secondary">
            <tr>
                <th scope="col-2">Company</th>
                <th scope="col-2">Position</th>
                <th scope="col-2">Date Applied</th>
                <th scope="col-2">Status</th>
                <th scope="col-2">Notes</th>
                <th scope="col-1">Update</th>
                <th scope="col-1">Remove</th>
                <br>
                <br>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            <% application.forEach(function(a) { %>
                <tr>
                    <td>
                        <%= a.company %>
                    </td>
                    <td>
                        <%= a.position %>
                    </td>
                    <td>
                        <%= a.dateApplied %>
                    </td>
                    <td>
                        <%= a.stat %>
                    </td>
                    <td> <a href="/applications/<%= a._id %>/notes">Notes</a> </td>
                    <td> <a href="/applications/<%= a._id %>/edit">Update</a> </td>
                    <td>
                        <% { %>
                            <form action="/applications/<%= a._id %>?_method=DELETE" method="POST">
                                <button type="submit">Delete</button>
                            </form>
                            <% } %>
                    </td>
                </tr>

                <% }); %>
        </tbody>
    </table>

    <!-- JavaScript Bundle with Popper -->
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</body>

</html>