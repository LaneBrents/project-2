<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- CSS only -->
    <link defer href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Add-Note</title>
</head>

<body>
    <nav>
        <h1>JobTrack</h1>
        <a href="/applications">My Applications</a>
        <% if (user) { %>
            <a href="/logout">LOG OUT</a>
            <% } else { %>
                <a href="/auth/google" class="login">LOG IN&nbsp;<img src=""></a>
                <% } %>
    </nav>
    <div id="note-form">
        <form id="add-note-form" action="/applications/<%= application._id %>/notes" method="POST">
            <label>Add a Note:</label>
            <input type="text" name="content">
            <input type="submit" value="Add Note" id="button">
        </form>
    </div>
    <br>
    <br>

    <% notes.forEach(function(a) { %>
        <tr>
            <td>
                <%= a.content %>
            </td>
        </tr>

        <% }); %>

            <!-- JavaScript Bundle with Popper -->
            <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
                crossorigin="anonymous"></script>
</body>

</html>